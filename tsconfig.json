{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "target": "ES2022",               // stable modern Node target
    "module": "NodeNext",             // ESM mode for Node
    "moduleResolution": "NodeNext",   // resolves .js/.ts properly in ESM
    "lib": ["ESNext"],
    "types": ["node"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type Safety
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Style
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Misc
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
